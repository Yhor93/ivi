<div class="flex flex-row min-h-screen ">
    <!-- Imagen del producto -->
    <div class="relative w-[75%] min-h-screen">
        <!-- Fondo difuminado -->
        <div class="absolute inset-0 bg-cover bg-center blur-md opacity-80" style="background-image: url(<%= url_for(@product.photo) %>)">
        </div>
        <!-- Imagen principal centrada -->
        <div class="flex items-center relative justify-center z-10 h-full">
            <%= image_tag @product.photo, alt: @product.title, class: "max-w-[70%] h-auto block" if @product.photo.attached? %>
        </div>
    </div>
    <!-- Detalles del producto -->
    <div class="w-[25%] flex flex-col relative z-10 px-6 py-6">
        <!-- Nombre -->
        <div class="mt-2 mb-4">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-gray-900 pl-4 border-l-4 border-green-500">
                <%= @product.title %>
            </h1>
        </div>

        <!-- Descripción -->
        <div class="mb-6 p-4 border-l-4 border-green-500 ">
            <%= @product.description %>
        </div>

        <!-- Precio -->
        <p class="text-2xl font-semibold text-green-700 mb-6">
            <%= number_to_currency(@product.price, unit: "$") %>
        </p>

        <!-- Botones admin -->
        <% if Current.user&.admin? || @product.owner? %>
        <div class="flex gap-4 mb-6">
            <%= link_to t('products.actions.edit'), edit_product_path(@product), 
            class: "flex-1 text-center bg-blue-400 text-white py-2 rounded-lg hover:bg-blue-600" %>
            <%= link_to t('products.actions.destroy'), @product, 
            class: "flex-1 text-center bg-red-400 text-white py-2 rounded-lg hover:bg-red-600",
            data: { turbo_method: :delete, turbo_confirm: t('products.show.confirm_destroy') } %>
        </div>
        <% end %>

        <!-- Botón favorito -->
        <% if Current.user %>
        <div class="mb-6">
            <%= render "products/favorite_button", product: @product %>
        </div>
        <% end %>

        <!-- Ver más productos / Mi perfil -->
        <div class="flex justify-center mb-6">
            <% if Current.user == @product.user %>
            <%= link_to t('.go_to_my_profile'), user_path(@product.user.username), 
        class: "text-lg font-medium text-gray-700 border-b-2 border-transparent hover:border-green-600 transition-all duration-200" %>
            <% else %>
            <%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username), 
        class: "text-lg font-medium text-gray-700 border-b-2 border-transparent hover:border-green-600 transition-all duration-200" %>
            <% end %>
        </div>

        <!-- Volver -->
        <div class="flex justify-center mt-8">
            <%= link_to products_path,
            class: "relative inline-flex p-0.5 rounded-lg bg-gradient-to-br from-green-500 to-green-700 group focus:outline-none focus:ring-2 focus:ring-green-300 dark:focus:ring-green-800 cursor-pointer" do %>
            <span class="px-5 py-2.5 text-sm font-medium text-gray-900 bg-white rounded-md transition-all duration-200 ease-in group-hover:bg-transparent group-hover:text-white dark:bg-gray-900 dark:text-white">
                <%= t('products.show.back') %>
            </span>
            <% end %>
        </div>
    </div>
</div>