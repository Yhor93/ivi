<div class="max-w-md p-5 rounded-xl shadow-[0_8px_20px_rgba(0,0,0,0.12)]
            transition-all duration-300 ease-in-out hover:-translate-y-2 
            hover:shadow-[0_20px_40px_rgba(0,0,0,0.2)] flex flex-col h-full">

    <!-- Imagen 
    <% if product.photo.attached? %>
    <%= image_tag product.photo, class: "w-full h-60 object-cover border rounded-lg" %>
    <% else %>
    <div class="w-full h-60 flex items-center justify-center bg-gray-100 text-gray-500">
        <%= t('products.index.no_photo') %>
    </div>
    <% end %> -->

    <!-- Contenido -->
    <div class="p-1 flex flex-col flex-grow">
        <h2 class="text-lg text-gray-900 font-medium truncate"><%= product.title %></h2>
        <p class="text-sm text-gray-600 line-clamp-2"><%= truncate(product.description, length: 30) %></p>
        <p class="my-1 font-semibold text-green-700"><%= number_to_currency(product.price, unit: "COP") %></p>

        <!-- Botón -->
        <div class="flex justify-center w-full mt-auto">
            <%= link_to product_path(product), data: { turbo_frame: "_top" },
                class: "relative inline-flex w-full p-0.5 rounded-lg bg-gradient-to-br from-green-500 to-green-700 group focus:outline-none focus:ring-2 focus:ring-green-300 dark:focus:ring-green-800 cursor-pointer" do %>
            <span class="w-full text-center px-5 py-2.5 text-sm font-medium text-gray-900 bg-white rounded-md transition-all duration-200 ease-in group-hover:bg-transparent group-hover:text-white dark:bg-gray-900 dark:text-white">
                Ver más...
            </span>
            <% end %>
        </div>
        <!-- Acciones 
        <div class="mt-3 flex justify-between text-sm">
            <%= link_to t('products.actions.show'), product, 
            class: "text-blue-600 hover:underline", data: { turbo_frame: "_top" } %>
            <%= link_to t('products.actions.edit'), edit_product_path(product), 
            class: "text-yellow-600 hover:underline", data: { turbo_frame: "_top" } %>
            <%= link_to t('products.actions.destroy'), product, 
            data: { turbo_method: :delete, turbo_confirm: t('products.index.confirm_destroy') }, 
            class: "text-red-600 hover:underline" %>
        </div>
        -->
    </div>
</div>