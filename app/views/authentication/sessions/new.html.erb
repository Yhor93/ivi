<div class="min-h-screen flex items-center justify-center bg-gray-100 relative overflow-hidden">

    <!-- Imagen decorativa al fondo -->
    <div class="absolute right-0 top-1/2 transform -translate-y-1/2 -translate-x-1/3 z-0">
        <%= image_tag "bg_login.png", class: "w-96 opacity-80 object-contain pointer-events-none" %>
    </div>

    <!-- Formulario centrado -->
    <div class=" p-6 rounded-2xl shadow-xl w-full max-w-md z-10 relative">
        <!-- Título -->
        <h1 class="mb-6 text-2xl font-bold text-center text-blue-900">
            <%= t('authentication.sessions.new.title') %>
        </h1>

        <%= form_with url: sessions_path, local: true do |f| %>
        <% if flash[:alert] %>
        <div class="mb-4 text-red-600 text-sm text-center">
            <p><%= flash[:alert] %></p>
        </div>
        <% end %>

        <!-- Login -->
        <div class="mb-4">
            <%= f.label :login, t('authentication.sessions.form.login'), class: "text-sm font-medium text-gray-700" %>
            <%= f.text_field :login, required: true, autofocus: true, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200" %>
        </div>

        <!-- Password -->
        <div class="mb-6">
            <%= f.label :password, t('authentication.sessions.form.password'), class: "text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, required: true, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200" %>
        </div>

        <!-- Olvidé mi contraseña -->
        <div class="flex justify-between items-center my-4 text-sm">
            <%= link_to t('authentication.sessions.new.forgot_password'), "#", class: "text-green-600 hover:underline" %>
        </div>

        <!-- Botones -->
        <div class="flex justify-between items-center">
            <!-- Botón login -->
            <%= button_tag type: "submit",
            class: "relative inline-flex items-center justify-center p-0.5 rounded-lg bg-gradient-to-br from-green-500 to-green-700 group focus:outline-none focus:ring-2 focus:ring-green-300 cursor-pointer" do %>
            <span class="px-5 py-2.5 text-sm font-medium text-gray-900 bg-white rounded-md transition-all duration-200 ease-in group-hover:bg-transparent group-hover:text-white">
                <%= t('authentication.sessions.new.submit') %>
            </span>
            <% end %>

            <!-- Link registro -->
            <%= link_to new_user_path, class: "px-4 py-2 text-sm font-medium border border-green-600 text-green-600 rounded-lg hover:bg-green-500 hover:text-white focus:ring-2 focus:ring-green-300 transition duration-200" do %>
            <%= t('authentication.sessions.new.back_to_signup') %>
            <% end %>
        </div>
        <% end %>
    </div>
</div>